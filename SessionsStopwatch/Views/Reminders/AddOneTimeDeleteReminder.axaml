<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:reminders="clr-namespace:SessionsStopwatch.ViewModels.Reminders"
             mc:Ignorable="d"
             Width="400" Height="100"
             Padding="12"
             x:Class="SessionsStopwatch.Views.Reminders.AddOneTimeDeleteReminder"
             x:DataType="reminders:AddOneTimeDeleteReminderVM">
    <StackPanel Spacing="10">
        <StackPanel VerticalAlignment="Top"
                    Orientation="Horizontal" Spacing="3">
            <TextBlock VerticalAlignment="Center">Time:</TextBlock>
            <TextBox Height="30" MinHeight="10"
                     FontSize="10"
                     TextAlignment="Center"
                     Text="{Binding TimeTextBox}"/>
        </StackPanel>
        <Button Command="{Binding AddCommand}">Add</Button>
    </StackPanel>
</UserControl>
